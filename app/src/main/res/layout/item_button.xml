<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="isLoading"
            type="boolean" />
    </data>
    <LinearLayout
        android:id="@+id/bt_float"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        app:visibleGone="@{isLoading}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:elevation="1dp"
            android:text="移除"
            android:background="@drawable/button_left_bg"
            android:drawableTop="@mipmap/move"/>
        <Button
            android:id="@+id/bt_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:elevation="1dp"
            android:text="最爱"
            android:background="@drawable/button_mid_bg"
            android:drawableTop="@mipmap/favorite"/>
        <Button
            android:id="@+id/bt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:elevation="1dp"
            android:text="分享"
            android:background="@drawable/button_right_bg"
            android:drawableTop="@mipmap/share"/>
    </LinearLayout>
</layout>